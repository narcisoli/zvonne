<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundal"
    android:orientation="vertical">




        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/fundaldark"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.narcis.zvonne.obiecte.otf
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Unde vreti sa fie livrata?"
                    android:textColor="@color/white"

                    android:textSize="16dp"

                    />

                <EditText
                    android:id="@+id/editTextadresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView28"
                    android:layout_centerHorizontal="true"


                    android:hint="ex: str.Armatei nr 53"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/white"
                    android:textSize="@dimen/normal" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/fundaldark"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.narcis.zvonne.obiecte.otf
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Numar de telefon:"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <EditText
                    android:id="@+id/numartelefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView27"
                    android:layout_centerHorizontal="true"



                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/white"
                    android:textSize="@dimen/normal" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card2"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/fundaldark"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.narcis.zvonne.obiecte.otf
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Alte detalii:"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/detaliic2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView29"
                    android:layout_centerHorizontal="true"


                    android:hint="ex: str.Armatei nr 53"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/white"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textColorHint="@color/gray"
                    android:textColorLink="@color/white"
                    android:textSize="@dimen/normal" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>



        <ImageView
            android:id="@+id/comandac2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/check"
            android:textColor="@color/white"
            android:textSize="@dimen/normal" />





</RelativeLayout>
