
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundal"
    tools:context="com.example.narcis.zvonne.fragSecundare.event.eventFRAG1">

    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:id="@+id/relativ"
       android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/circleimage"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/imageprogres" >
    </ImageView>
       <ProgressBar
           android:id="@+id/progres"
           android:pointerIcon="arrow"
           style="?android:attr/progressBarStyle"
           android:layout_width="wrap_content"
           android:indeterminate="true"
           android:indeterminateTintMode="src_atop"
           android:indeterminateTint="@color/white"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:visibility="visible"/>
   </RelativeLayout>

    <com.example.narcis.zvonne.obiecte.otf
        android:id="@+id/eventnume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativ"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/white"
        android:textSize="@dimen/titlu" />

    <com.example.narcis.zvonne.obiecte.otf
        android:id="@+id/eventdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventnume"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/white"
        android:textSize="@dimen/normal" />

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@id/eventdata"
        android:scaleY="0.1"
        android:scaleX=".8"

        />

    <com.example.narcis.zvonne.obiecte.otf
        android:id="@+id/eventfrag1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/white"
        android:textSize="@dimen/normal" />

</RelativeLayout>
</ScrollView>
