<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <android.support.v7.widget.CardView
        android:id="@+id/idd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="false"
        app:cardBackgroundColor="@color/fundaldark"

        app:cardElevation="5dp"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/sus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imaginepizza"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="center"
                    android:src="@color/white" />

                <RelativeLayout
                    android:id="@+id/relativ77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/imaginepizza">

                    <RelativeLayout
                        android:id="@+id/l1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/info"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_info_white_36dp" />

                        <com.example.narcis.zvonne.obiecte.otf
                            android:id="@+id/pizzanume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/info"
                            android:clickable="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/titlu"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/l2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/l1"
                        android:layout_marginTop="5dp"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ingrediente"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ingre"
                            android:tint="@color/white" />

                        <com.example.narcis.zvonne.obiecte.otf
                            android:id="@+id/pizzaingrediente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/ingrediente"
                            android:clickable="false"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="italic" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/l3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/l2"
                        android:layout_marginTop="5dp"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pret"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_attach_money_white_36dp" />

                        <com.example.narcis.zvonne.obiecte.otf
                            android:id="@+id/butonpizza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/pret"
                            android:clickable="false"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="italic" />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/l4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/l3"
                        android:layout_marginTop="5dp"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/star1" />
                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/star1" />
                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/star1" />
                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/star1" />
                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/star1" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sus"
                android:orientation="horizontal"
                android:weightSum="3">


                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/fundal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_add_shopping_cart_white_36dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"

                    android:background="@color/fundal"
                    android:padding="5dp"

                    >

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_comment_white_36dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/fundal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_star_white_36dp" />


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>


