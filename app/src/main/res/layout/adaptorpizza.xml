<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <android.support.v7.widget.CardView
        android:id="@+id/idd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="false"
        app:cardBackgroundColor="@color/fundaldark"
        app:cardElevation="50dp"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imaginepizza"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:src="@color/white" />

                <RelativeLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/imaginepizza"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/info"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_info_white_36dp"
                      />

                    <com.example.narcis.zvonne.obiecte.otf
                        android:id="@+id/pizzanume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/info"
                        android:clickable="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/titlu"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/imaginepizza"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ingrediente"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ingre"
                        android:tint="@color/white"
                        />

                    <com.example.narcis.zvonne.obiecte.otf
                        android:id="@+id/pizzaingrediente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ingrediente"
                        android:clickable="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/titlu"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/imaginepizza"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/pret"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_attach_money_white_36dp"
                        />

                    <com.example.narcis.zvonne.obiecte.otf
                        android:id="@+id/butonpizza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/pret"
                        android:clickable="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/titlu"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>


