<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/fundaldark"
        app:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/sus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_info_white_36dp"/>

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/adaptoristoricstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/titlu" />

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/adaptorrezervaredata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adaptoristoricstatus"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/adaptorrezervaredetalii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/adaptorrezervaredata"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>