<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/fundal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imaginepizza"
                android:layout_width="200dp"
                android:layout_height="200dp"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@color/white" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/imaginepizza"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5" />

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/notapizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/fundal"
                android:text="Pizza Capriciaoasa"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/mic" />


            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@id/notapizza"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scaleY="0.051"></View>

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/numepizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/fundal"
                android:text="Pizza Capriciaoasa"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/titlu" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@id/numepizza"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scaleY="0.03"></View>

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/ingredientepizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/fundal"
                android:text="Pizza Capriciaoasa"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@id/ingredientepizza"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scaleY="0.03"></View>

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/pretpizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/fundal"
                android:text="Pizza Capriciaoasa"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@id/pretpizza"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scaleY="0.03"></View>

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/gramajpizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/fundal"
                android:text="Pizza Capriciaoasa"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@id/gramajpizza"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scaleY="0.03"></View>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/evalueaza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/re"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imagine1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/star" />

            <com.example.narcis.zvonne.obiecte.otf
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imagine1"
                android:text="Evalueaza"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />
        </RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="70dp"
            android:layout_height="70dp"
           android:layout_alignParentRight="true"
            android:layout_below="@id/evalueaza"

            android:src="@drawable/ad"
            app:backgroundTint="@color/fundaldark"
            app:borderWidth="0dp"
            app:elevation="14dp"
            app:fabSize="normal"
            app:rippleColor="@color/fundal" />


    </RelativeLayout>


</ScrollView>


