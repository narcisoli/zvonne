<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView

            android:id="@+id/imaginepizza"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_below="@id/imaginepizza"
            android:id="@+id/relativerating">
            <RatingBar
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:isIndicator="true"
                android:rating="5"
                android:scaleX=".7"
                android:scaleY=".7"/>


            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/notapizza"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:text="( 4/5 din 12 voturi )"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativerating"
            android:orientation="vertical">


            <com.example.narcis.zvonne.obiecte.butonotf
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Nume"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/numepizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/x2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/x1"
            android:orientation="vertical">


            <com.example.narcis.zvonne.obiecte.butonotf
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Ingrediente"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/ingredientepizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/x2"
            android:orientation="vertical">


            <com.example.narcis.zvonne.obiecte.butonotf
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Pret"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/pretpizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/re3"
            android:orientation="vertical">


            <com.example.narcis.zvonne.obiecte.butonotf
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Gramaj"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />

            <com.example.narcis.zvonne.obiecte.otf
                android:id="@+id/gramajpizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button6"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />


        </RelativeLayout>


    </RelativeLayout>


</ScrollView>



